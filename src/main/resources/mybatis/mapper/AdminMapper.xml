from dailysalestats2
group by memberId, month,year, month order by orderQty desc;
	-->

	<select id="getYearlyPurchaseVolume" resultMap="saleStat">
		select memberId,sum(totalPrice) as totalPrice, sum(orderQty) as orderQty,
		year from dailysalestats2
		group by memberId, year order by orderQty desc;
	</select>

